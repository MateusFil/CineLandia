@model IEnumerable<TRABALHODEFINITIVO.Models.Filme>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">CineLandia</h1>

</div>

@foreach (var item in Model.Take(10))
{
    <div class="card" style="width: 18rem; display: inline-block; margin-right: 10px;">
        <img src="@item.FotoCapa" class="card-img-top" height="320px" />
        <div class="card-body">
            <h5>@item.Titulo</h5>
            <a asp-controller="Filmes"
               asp-action="Details"
               asp-route-id="@item.FilmeId"
               class="btn btn-primary">Saiba Mais...</a>
        </div>
        
    </div>
}